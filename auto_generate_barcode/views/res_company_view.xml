<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_company_form_barcode" model="ir.ui.view">
            <field name="name">res.company.ean.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="EAN13 Barcode Configuration">
                        <group name="ean13_barcode" string="EAN13 Barcode Configuration">
                            <group>
                                <field name="on_product_creation"/>
                                <field name="use_prefix"/>
                                <field name="prefix" attrs="{'invisible': [('use_prefix','!=', True)],'required': [('use_prefix','=', True)]}"/>
                                <field name="generate_method"/> 

                                <field name="module_width"/>
                                <field name="module_height"/>
                                <field name="quiet_zone"/>
                                
                                
                                <field name="background" placeholder="The background color of the created barcode as string. Defaults to white"/>
                                <field name="foreground" placeholder="The foreground and text color of the created barcode as string. Defaults to black"/> 
                                
                                <field name="write_text"/>
                                <field name="font_size" attrs="{'invisible': [('write_text','!=', True)]}"/>                                
                                <field name="text_distance" attrs="{'invisible': [('write_text','!=', True)]}"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>
