<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>        
        <record id="product_template_tree_view_barcode" model="ir.ui.view">
            <field name="name">product.template.barcode.tree</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name="active" position="before">
                    <field name="barcode"/>
                </field>
            </field>
        </record>

        <record id="product_product_tree_view_barcode" model="ir.ui.view">
            <field name="name">product.product.barcode.tree</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <field name="active" position="before">
                    <field name="barcode"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="product_normal_form_view_barcode">
            <field name="name">product.product.ean.barcode</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">                
                <xpath expr="//field[@name='barcode']" position="after">
                	<button name="generate_barcode" string="Manually Generate EAN13 Barcode" type="object" class="btn-link"
                            colspan="2" attrs="{'invisible': [('barcode','!=', False),('ean13_image','!=', False)]}"
                            groups="base.group_no_one, auto_generate_barcode.group_barcode_user"/>
                	<field name="ean13_image" widget="image" force_save="1" attrs="{'invisible': [('barcode','=', False)]}" nolabel="0"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="product_template_only_form_view_barcode">
            <field name="name">product.template.ean.barcode</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="barcode" position="attributes">
                    <attribute name="attrs">{'invisible': [('active', '=', False)]}</attribute>
                </field>
                <xpath expr="//field[@name='barcode']" position="after">
                	<button name="generate_barcode" string="Manually Generate EAN13 Barcode" type="object" class="btn-link"
                            colspan="2" attrs="{'invisible': [('barcode','!=', False),('ean13_image','!=', False)]}"
                            groups="base.group_no_one, auto_generate_barcode.group_barcode_user"/>
                	<field name="ean13_image" widget="image" attrs="{'invisible': [('barcode','=', False)]}" nolabel="0"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
